{
  "name": "antigravity-visual-editor",
  "displayName": "Antigravity Visual Editor",
  "description": "Visual WYSIWYG editing for HTML and React projects with real-time preview, drag-and-drop, and AI agent integration",
  "version": "0.1.0",
  "publisher": "antigravity",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "visual editor",
    "wysiwyg",
    "html",
    "react",
    "preview",
    "drag and drop"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "antigravity.openPreview",
        "title": "Open Visual Editor",
        "category": "Antigravity",
        "icon": "$(preview)"
      },
      {
        "command": "antigravity.toggleEditMode",
        "title": "Toggle Visual Edit Mode",
        "category": "Antigravity",
        "icon": "$(edit)"
      },
      {
        "command": "antigravity.testContext",
        "title": "Test Context Provider",
        "category": "Antigravity",
        "icon": "$(check)"
      }
    ],
    "keybindings": [
      {
        "command": "antigravity.openPreview",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorTextFocus && (editorLangId == html || editorLangId == javascriptreact || editorLangId == typescriptreact)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "antigravity.openPreview",
          "when": "editorLangId == html || editorLangId == javascriptreact || editorLangId == typescriptreact",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "antigravity-sidebar",
          "title": "Visual Editor",
          "icon": "resources/icons/sidebar.svg"
        }
      ]
    },
    "views": {
      "antigravity-sidebar": [
        {
          "type": "webview",
          "id": "antigravity.stylePanel",
          "name": "Style Panel"
        },
        {
          "type": "webview",
          "id": "antigravity.elementTree",
          "name": "Element Tree"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.config.js --production",
    "watch": "node esbuild.config.js --watch",
    "lint": "eslint src --ext ts",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/babel__generator": "^7.27.0",
    "@types/babel__traverse": "^7.28.0",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@babel/generator": "^7.28.6",
    "@babel/parser": "^7.28.6",
    "@babel/traverse": "^7.28.6",
    "css-tree": "^2.3.1",
    "htmlparser2": "^9.1.0"
  }
}